    {
      "parameters": {
        "operation": "executeQuery",
        "query": "INSERT INTO automation_email_classifier.emails \n(gmail_message_id, gmail_thread_id, from_email, from_name, to_emails, \n subject, body_text, body_html, snippet, received_at, sent_at, \n has_attachments, attachment_count, size_bytes, processing_status)\nVALUES \n('{{ $json.id }}', \n '{{ $json.threadId }}', \n'{{ $json.payload.headers.find(h => h.name === \"From\").value }}', \n'{{ $json.payload.headers.find(h => h.name === \"From\").value.split(\"<\")[0].trim() }}', \nARRAY['{{ $json.payload.headers.find(h => h.name === \"To\").value }}']::TEXT[], \n'{{ $json.payload.headers.find(h => h.name === \"Subject\").value }}', \n'{{ $json.snippet }}', \n'{{ $json.payload.body.data }}', \n'{{ $json.snippet }}', \nTO_TIMESTAMP({{ $json.internalDate }} / 1000), \nTO_TIMESTAMP({{ $json.internalDate }} / 1000), \n{{ $json.payload.parts && $json.payload.parts.length > 1 }}, \n{{ $json.payload.parts ? $json.payload.parts.length - 1 : 0 }}, \n{{ $json.sizeEstimate }}, \n'pending')\nRETURNING id, gmail_message_id, from_email, subject;",
        "additionalFields": {}
      },
      "id": "postgres_insert",
      "name": "PostgreSQL - Insert Email",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [450, 300],
      "credentials": {
        "postgres": {
          "id": "1",
          "name": "PostgreSQL - bdn8n"
        }
      }
    },
    {
      "parameters": {
        "operation": "update",
        "messageId": "={{ $node[\"Gmail Trigger\"].json.id }}",
        "updateFields": {
          "labelIds": ["PROCESSED"]
        }
      },
      "id": "gmail_mark_processed",
      "name": "Gmail - Mark as Processed",
      "type": "n8n-nodes-base.gmail",
      "typeVersion": 2,
      "position": [650, 300],
      "credentials": {
        "gmailOAuth2": {
          "id": "1",
          "name": "Gmail OAuth2"
        }
      }
    },
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "email-classifier-webhook",
        "responseMode": "lastNode",
        "options": {}
      },
      "id": "webhook_trigger_classifier",
      "name": "Trigger AI Classifier",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [850, 300],
      "webhookId": "email-classifier"
    },
    {
      "parameters": {
        "url": "=https://n8n-n8n.aymebz.easypanel.host/webhook/ai-classifier",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "email_id",
              "value": "={{ $node[\"PostgreSQL - Insert Email\"].json.id }}"
